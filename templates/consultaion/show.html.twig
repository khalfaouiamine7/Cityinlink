{% extends 'base.html.twig' %}

{% block title %}Consultaion{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Consultaion</h1>
        <table class="table">
            <tbody>
                <tr>
                    <th scope="row">Id</th>
                    <td>{{ consultaion.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Adresse</th>
                    <td>{{ consultaion.adresse }}</td>
                </tr>
                <tr>
                    <th scope="row">Date</th>
                    <td>{{ consultaion.date ? consultaion.date|date('m/d/Y') : '' }}</td>
                </tr>
                <tr>
                    <th scope="row">Heure</th>
                    <td>{{ consultaion.heure ? consultaion.heure|date('H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th scope="row">Specialite</th>
                    <td>{{ consultaion.specialite }}</td>
                </tr>
            </tbody>
        </table>

        <form action="{{ path('app_consultaion_index') }}">
            <button type="submit" class="btn btn-primary">Back to List</button>
        </form>

        <form action="{{ path('app_consultaion_edit', {'id': consultaion.id}) }}">
            <button type="submit" class="btn btn-secondary">Edit</button>
        </form>

        {{ include('consultaion/_delete_form.html.twig') }}
    </div>
{% endblock %}
