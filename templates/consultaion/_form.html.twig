<div class="my-form" style="max-width: 400px; margin: auto; padding: 20px; border: 1px solid #ccc; border-radius: 5px; background-color: #f9f9f9;">
    {{ form_start(form, {'attr': {'class': 'form'}}) }}
        <div class="form-group row">
            <label for="adresse" class="col-sm-3 col-form-label">Adresse:</label>
            <div class="col-sm-9">
                {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group row">
            <label for="date" class="col-sm-3 col-form-label">Date:</label>
            <div class="col-sm-9">
                {{ form_widget(form.date, {'attr': {'class': 'form-control', 'placeholder': 'mm/dd/yy'}, 'format': 'MM/dd/yy'}) }}
            </div>
        </div>
        <div class="form-group row">
            <label for="heure" class="col-sm-3 col-form-label">Heure:</label>
            <div class="col-sm-9">
                {{ form_widget(form.heure, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group row">
            <label for="specialite" class="col-sm-3 col-form-label">Specialite:</label>
            <div class="col-sm-9">
                {{ form_widget(form.specialite, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-12">
                <button class="btn btn-primary" type="submit">{{ button_label|default('Save') }}</button>
            </div>
        </div>
    {{ form_end(form) }}
</div>




<style>
    /* CSS for form container */
    .my-form {
        max-width: 400px;
        margin: auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

    /* CSS for form inputs */
    .my-form .form-control {
        width: 100%;
        padding: 8px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    /* CSS for form button */
    .my-form button.btn {
        background-color: #4CAF50;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    /* CSS for form button on hover */
    .my-form button.btn:hover {
        background-color: #45a049;
    }
</style>
